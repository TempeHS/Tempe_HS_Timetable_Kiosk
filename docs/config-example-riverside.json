{
  "school": {
    "name": "Riverside Secondary College",
    "logo": {
      "url": "https://example-school.edu.au/assets/logo.png",
      "opacity": 0.12,
      "size": "auto 80vh"
    }
  },
  "colors": {
    "primary": "#003366",
    "background": "#f0f4f8",
    "overlay": "rgba(240, 244, 248, 0.4)",
    "tile": {
      "background": "#E8F4FD",
      "border": "#2C5F7B",
      "shadow": "#9CB4C8",
      "hover": "#D1E7F5"
    },
    "text": {
      "primary": "#1a2325",
      "secondary": "#6B7280",
      "classCode": "#003366"
    }
  },
  "schedule": {
    "ignoredDays": [0, 6],
    "schoolDays": [1, 2, 3, 4, 5],
    "defaultShowMinutesBefore": 15,
    "periods": {
      "HR": {
        "showFromTime": "08:30",
        "description": "Home Room"
      },
      "P1": {
        "showFromTime": "08:40",
        "description": "Period 1"
      },
      "LUNCH": {
        "showFromTime": "13:00",
        "description": "Lunch Break"
      }
    }
  },
  "sportPeriods": {
    "wednesday": {
      "periods": ["P4", "P5"],
      "yearGroups": {
        "8": {
          "label": "Year 8 & 9 Sport",
          "includesYears": [8, 9],
          "excludeYears": [9]
        },
        "10": {
          "label": "Year 10 & 11 Sport", 
          "includesYears": [10, 11],
          "excludeYears": [11]
        }
      }
    },
    "friday": {
      "periods": ["P6"],
      "yearGroups": {
        "7": {
          "label": "Years 7-12 Assembly",
          "includesYears": [7, 8, 9, 10, 11, 12],
          "excludeYears": []
        }
      }
    }
  },
  "yearGroups": {
    "multiRowYears": [8, 10],
    "displayYears": [7, 8, 9, 10, 11, 12],
    "classCodePattern": "^(\\d+)"
  },
  "ui": {
    "refreshInterval": 45000,
    "cacheBusting": true,
    "responsive": {
      "breakpoints": {
        "large": 1600,
        "medium": 1200,
        "small": 768
      }
    }
  },
  "files": {
    "bellTimes": "bell_times.xml",
    "lessons": "liss_info.xml",
    "calendar": "calendar.xml"
  }
}
