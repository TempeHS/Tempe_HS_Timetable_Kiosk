      "background": "#EDEDEE",
      "border": "#555",
      "shadow": "#b5b7b9",
      "hover": "#EDEDEE"
    },
    "text": {
      "primary": "#1a2325",
      "secondary": "#b5b7b9",
      "classCode": "#AC0000"
    }
  },
  "schedule": {
    "ignoredDays": [0, 6],
